{
  "version": "1.0.0",
  "name": "gittable",
  "description": "Modern Git CLI with conventional commits powered by @clack/prompts",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "gittable": "./cli.js",
    "gitt": "./cli.js",
    "gitx": "./cli.js"
  },
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "node --test test/**/*.test.js",
    "test:watch": "node --test --watch test/**/*.test.js",
    "commit": "./standalone.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GG-Santos/Gittable.git"
  },
  "homepage": "https://github.com/GG-Santos/Gittable#readme",
  "bugs": {
    "url": "https://github.com/GG-Santos/Gittable/issues"
  },
  "author": "GG-Santos <ggsantos_0415@proton.me>",
  "license": "MIT",
  "keywords": [
    "git",
    "cli",
    "commitizen",
    "commit",
    "conventional-changelog",
    "git-wrapper",
    "version-control"
  ],
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "email-prompt": "^0.4.1",
    "find-config": "^1.0.0",
    "prettycli": "^1.1.0",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "commitizen": "^4.3.0"
  },
  "files": [
    "cli.js",
    "index.js",
    "index.d.ts",
    "standalone.js",
    "commands",
    "lib"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  }
}
